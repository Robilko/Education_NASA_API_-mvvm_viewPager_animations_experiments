<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/bg_earth"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/swipe_indication_group_margin">

        <androidx.appcompat.widget.AppCompatImageView
            style="@style/SwipeIndication"
            android:src="@drawable/swipe_indicator_active"/>

        <androidx.appcompat.widget.AppCompatImageView
            style="@style/SwipeIndication"
            android:src="@drawable/swipe_indicator_passive"/>

        <androidx.appcompat.widget.AppCompatImageView
            style="@style/SwipeIndication"
            android:src="@drawable/swipe_indicator_passive"/>

    </LinearLayout>

</FrameLayout>