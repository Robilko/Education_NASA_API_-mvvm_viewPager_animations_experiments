<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.view.SettingsFragment">

    <TextView
        android:id="@+id/header_text_theme_selection"
        style="@style/SettingsHeaders"
        android:text="@string/header_text_theme_selection" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group_theme_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_default"
        app:chipSpacingHorizontal="25dp"
        app:selectionRequired="true"
        app:singleLine="true"
        app:singleSelection="true"
        android:layout_gravity="center">

        <com.google.android.material.chip.Chip
            android:id="@+id/default_theme"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="@string/default_theme_name" />

        <com.google.android.material.chip.Chip
            android:id="@+id/cosmic_theme"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="@string/cosmic_theme_name" />
    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/header_text_font_selection"
        style="@style/SettingsHeaders"
        android:text="@string/header_text_font_selection" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group_font_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_default"
        app:chipSpacingHorizontal="25dp"
        app:selectionRequired="true"
        app:singleLine="true"
        app:singleSelection="true"
        android:layout_gravity="center">

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/font_1" />

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/font_2" />

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/font_3" />
    </com.google.android.material.chip.ChipGroup>

</LinearLayout>